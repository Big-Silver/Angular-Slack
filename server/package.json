{
  "name": "slack-api",
  "version": "0.1.0",
  "description": "Slack API",
  "scripts": {
    "start": "nodemon ./server.js --exec babel-node",
    "build": "babel . -d dist --presets es2015,stage-0 --ignore spec.js,node_modules",
    "serve": "node dist/server.js",
    "start_babel": "babel-node ./server.js --preset=babel-preset-es2015",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Big-Silver/slack-api.git"
  },
  "keywords": [
    "Node.js",
    "Javascript",
    "Express"
  ],
  "author": "Big Silver <bigsilversstar@yandex.com>",
  "dependencies": {
    "apollo-server-express": "^1.3.6",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.15.2",
    "cors": "^2.8.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.0",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.2.0",
    "lodash": "^4.15.0",
    "mongoose": "^5.0.11",
    "morgan": "^1.8.2",
    "nodemailer": "^4.6.4",
    "socket.io": "^2.1.0",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-inline-import": "^2.0.1",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-plugin-import": "^2.0.1",
    "nodemon": "^1.9.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0,
      "consistent-return": 0,
      "func-names": 0,
      "no-underscore-dangle": 0
    },
    "env": {
      "mocha": true
    }
  }
}
